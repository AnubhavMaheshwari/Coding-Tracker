{
    "manifest_version": 3,
    "name": "Coding Tracker",
    "version": "1.0.0",
    "description": "Professional tool to track and manage coding problems from LeetCode, GFG, and more. Featuring minimalist right-click tracking and a beautiful dashboard.",
    "icons": {
        "128": "assets/extension_logo_128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus"
    ],
    "host_permissions": [
        "https://leetcode.com/*",
        "https://www.geeksforgeeks.org/*",
        "https://codeforces.com/*",
        "https://atcoder.jp/*",
        "https://www.hackerrank.com/*",
        "https://www.codechef.com/*",
        "https://www.naukri.com/*",
        "https://cses.fi/*",
        "https://www.w3schools.com/*",
        "https://*/*",
        "http://*/*"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/*",
                "https://www.geeksforgeeks.org/*",
                "https://codeforces.com/*",
                "https://atcoder.jp/*",
                "https://www.hackerrank.com/*",
                "https://www.codechef.com/*",
                "https://www.naukri.com/*",
                "https://cses.fi/*",
                "https://www.w3schools.com/*"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ]
}